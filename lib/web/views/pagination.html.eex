<%= raw(if total > ppp() do %>
  <nav class="pagination">
    <%= link(path_generator, page - 1, page == 1, "«") %>

    <%= raw(for p <- 1..(total_pages(total)) do %>
      <%= link(path_generator, p, p == page) %>
    <% end) %>

    <%= link(path_generator, page + 1, page >= total_pages(total), "»") %>
  </nav>
<% end) %>
